@using surplus_auctioneer_models
@model surplus_auctioneer_webapp.Models.SearchViewModel
@{
    ViewBag.Title = "Search";
}

<script>
    $(document).ready(function () {
        my.Views.Search.init();
    })
</script>

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<form action="~/Home/Search" method="post">
    <div class="input-group">
        <div class="form-group row">
            <label for="MinPrice-input" class="col-xs-2 col-form-label">Min Price:</label>
            <div class="col-xs-3">
                <input id="MinPrice-input" type="text" name="MinPrice" class="form-control" />
            </div>
            <label for="MaxPrice-input" class="col-xs-2 col-form-label">Min Price:</label>
            <div class="col-xs-3">
                <input id="MaxPrice-input" type="text" name="MaxPrice" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xs-3 col-form-label">Key Words (comma delimited):</label>
            <textarea class="input-lg" name="Keywords"></textarea>
        </div>
        <div class="form-group row" style="text-align: right;">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
</form>

@if (Model.AuctionItems.Any())
{
    <table id="searchResults" class="tablesorter">
        <thead>
        <tr>
            <th>Short Description</th>
            <th style="width: 100px">Current Price</th>
            <th style="width: 125px">Next Required<br />Bid Amount</th>
            <th>Number of Bids</th>
        </tr>
        </thead>
        <tbody>
            @foreach (AuctionItem item in Model.AuctionItems)
            {
                <tr>
                    <td><a target="_blank" href="@item.AuctionItemURL">@item.ShortDescription</a></td>
                    <td>@item.CurrentPrice.ToString("C")</td>
                    <td>@item.NextBidRequired.ToString("C")</td>
                    <td>@item.NumberOfBids</td>
                </tr>
            }
        </tbody>
    </table>
}