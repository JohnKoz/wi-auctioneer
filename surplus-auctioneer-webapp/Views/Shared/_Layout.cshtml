<div style="height: 90px; text-align: center; width: 100%;" id="adsense">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- Surplus-Auctioneer-Leaderboard -->
    <ins class="adsbygoogle"
         style="display: block"
         data-ad-client="ca-pub-8101683365831864"
         data-ad-slot="2613412992"
         data-ad-format="auto"></ins>
